<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingRight="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/flip_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_baseline_flip_camera_32"
        android:textColor="@android:color/white"
        android:padding="8dp"
        android:text="Flip"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_baseline_filter_vintage_32"
        android:textColor="@android:color/white"
        android:padding="8dp"
        android:text="Filters"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_baseline_face_32"
        android:textColor="@android:color/white"
        android:padding="8dp"
        android:text="Beauty"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_baseline_timer_32"
        android:textColor="@android:color/white"
        android:padding="8dp"
        android:text="Timer"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_baseline_flip_camera_32"
        android:textColor="@android:color/white"
        android:padding="8dp"
        android:text="Speed"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_baseline_flash_off_32"
        android:textColor="@android:color/white"
        android:padding="8dp"
        android:text="Flash"
        android:gravity="center"/>

</LinearLayout>